[flake8]
# Maximum line length
max-line-length = 100

# Ignore specific rules that conflict with black or are too strict
ignore = E203,E501,W503,E402

# Exclude directories
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    data,
    notebooks,
    *.egg-info,
    build,
    dist

# Maximum complexity
max-complexity = 15

# Show source code for each error
show-source = True

# Count errors
count = True
